<%- include("header.ejs") %>

<!-- Main-->
<main class="main">

<!-- HOME-->
    <section class="home section" id="home">
        <div class="home-container container grid">
            <img src="images/Profil.png" alt="imagine" class="home_img">

            <div class="home-data">
                <h1 class="home-name">Chelaru<br>Stefan</h1>
                <h3 class="home-profesie">Web Developer</h3>
            </div>
        </div>
    </section>

<!-- Despre-->
    <section class="despre section" id="despre">
        <h2 class="titlu-sectiune">Despre mine</h2>

        <div class="container-despre grid">
            <!--Despre-->
            <div class="despre grid">
                <div class="despre_continut">
                    <h3 class="despre_titlu">Despre mine</h3>

                    <p class="despre_descriere">
                        Sunt un absolvent de informatică foarte ambițios, punctual, devotat și dornic de autodepășire.
                    </p>

                    <a href="Chelaru Stefan.pdf" download="" target="_blank" class="button despre_button">Descarcă CV</a>
                </div>

                <img src="" alt="imagine" class="despre-img">
            </div>
            <!--Aptitudini-->
            <div class="apt">
                <h3 class="despre_titlu">Aptitudini</h3>

                <div class="apt_content grid">
                    <div class="apt_box">
                        <img src="images/apt/apt-html.svg" alt="img" class="apt_img">
                        <span class="apt_nume">HTML</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-js.svg" alt="img" class="apt_img">
                        <span class="apt_nume">JavaScript</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-node.svg" alt="img" class="apt_img">
                        <span class="apt_nume">Node.js</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-ps.svg" alt="img" class="apt_img">
                        <span class="apt_nume">Photoshop</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-pslr.svg" alt="img" class="apt_img">
                        <span class="apt_nume">Lightroom</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-unity.svg" alt="img" class="apt_img">
                        <span class="apt_nume">Unity</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-c.svg" alt="img" class="apt_img">
                        <span class="apt_nume">C#</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-c++.svg" alt="img" class="apt_img">
                        <span class="apt_nume">C++</span>
                    </div>

                    <div class="apt_box">
                        <img src="images/apt/apt-blender.svg" alt="img" class="apt_img">
                        <span class="apt_nume">Blender</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

<!-- Proiecte-->
    <section class="proiecte section" id="proiecte">
        <h2 class="despre_titlu">PROIECTE RECENTE</h2>

        <div class="proiecte_container container grid">
            <article class="proiect_card">
                <a href="#" target="_blank" class="proiect_link">
                    <h2 class="proiect_titlu">Ceva</h2>
                    <p class="proiect_descriere">
                        Paragraf
                    </p>
                    <img src="" alt="image" class="proiect_img">

                    <i class="ri-arrow-right-line"></i>
                </a>
            </article>
        </div>
    </section>


<!-- Contact-->
    <section class="contact section" id="contact">
        <h2 class="titlu-sectiune">CONTACTEAZA-MA</h2>

        <div class="contact-container container grid">
            <form action="" class="contact-form grid" id="contact-form">
                <div class="contact-group grid">

                    <input type="text" name="user_name" placeholder="Nume" required class="contact-input">
                    <input type="email" name="user_email" placeholder="Email" required class="contact-input">
                </div>

                <textarea name="user_message" placeholder="Mesaj" required class="contact-input contact-area"></textarea>

                <button type="submit" class="button contact-button">Trimite</button>

                <p class="contact-message" id="contact-message"></p>
            </form>

            <div class="contact-social grid">
                <a href="" target="_blank" class="contact-social-link">
                    <i class="ri-facebook-fill"></i>
                    <span>Facebook</span>
                </a>

                <a href="" target="_blank" class="contact-social-link">
                    <i class="ri-instagram-fill"></i>
                    <span>Instagram</span>
                </a>

                <a href="" target="_blank" class="contact-social-link">
                    <i class="ri-linkedin-fill"></i>
                    <span>Linkedin</span>
                </a>
            </div>

        </div>
    </section>


</main>


<div class="content">
<h1>Portofoliul meu</h1>

</div>

